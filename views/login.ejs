<% include ./partials/header %>

<div class="container">
<h1 class="pb-3 text-center">Login!</h1>

<div style="width: 50%; margin: 25px auto;">
    <form action="/login" method="POST">
      
      <div class="form-group row">
        <label for="user[username]" class="col-sm-4 col-form-label">Username</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" id="user[username]" name="username" placeholder="Username" required>
        </div>
      </div>
        
      <div class="form-group row">
        <label for="password" class="col-sm-4 col-form-label ">Password</label>
        <div class="col-sm-8">
          <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
        </div>
      </div>
      
      <div class="form-group row">
        <div class="col-sm-12">
          <div class="user_submit_register" style="width: 20%">
            <button type="submit" class="btn btn-primary user_submit btn-block">Submit</button>
          </div>
        </div>
      </div>
      
    </form>
    
    <div class="form-group row">
        <div class="col-sm-12">
        <p class="float-left"> New? <a href="/register"> Sign Up</a> </p>
       <a href="/forgot-password" class="float-right">Forgot Password</a>
    </div>    
</div>



</div>
<% include ./partials/footer %>