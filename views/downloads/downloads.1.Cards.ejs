<% include ../partials/header %>

<div class="container">
<div class="row mb-2">
  <div class="col-md-6">
    <h3> Downloads Page </h3>
  </div>
  <div class="col-md-6">
    <p><a href="/downloads/upload" class="btn btn-primary float-right">Upload</a></p>
  </div>
</div>
<!-------------------------------------------------------------------------------->
<!----------------------------Downloads Table------------------------------------->
<!-------------------------------------------------------------------------------->


<div class="row">
  <% downloads.forEach(function(download){ %>
    <div class="col-md-4">
        <div class="card mb-3">
          <div class="card-header">
            Prof. <%=download.author.username%>
            </div>
              <div class="card-body">
                <h6 class="card-title"><%=download.title%></h6>
                <small class="card-text">With supporting text below as a natural lead-in to additional content.</p></small>
                <a href="<%=download.url%>" class="btn btn-primary btn-small">Download</a>
              </div>
            <div class="card-footer text-muted">
              <small>Upload Date: <%=download.date.toDateString()%></small>
        </div>
      </div>
    </div>
  <%})%>
  
  <div class="col-md-4">
      <div class="card text-center">
        <div class="card-header">
          Featured
          </div>
            <div class="card-body">
              <h5 class="card-title">Special title treatment</h5>
              <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
              <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
          <div class="card-footer text-muted">
        2 days ago
      </div>
    </div>
  </div>
</div>


</div>



<% include ../partials/footer %>

