<% include ./partials/header %>
<div class="container">
    
<form action="/reset/<%= token %>?_method=PUT" method="POST">
  <div class="form-group" >
    <label for="r-password">New Password</label>
    <input type="password" class="form-control col-sm-4" id="r-password" name="password" placeholder="Enter new password">
  </div>
  <div class="form-group">
    <label for="r-confirm">Password</label>
    <input type="password" class="form-control col-sm-4" id="r-confirm" name="confirm" placeholder="Confirm Password">
  </div>

  <button type="submit" class="btn btn-primary">Update Password</button>
</form>
    
    
</div>

<% include ./partials/footer %>
